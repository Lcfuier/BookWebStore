@{
    ViewData["Title"] = "Quản Lý Người Dùng";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Danh Sách Các Người Dùng</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
            <span class="fas fa-plus"></span>&nbsp;Tạo Mới
        </a>
    </div>
</div>

<div class="p-4 border-top border-bottom">
    <table id="datatable-user" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-info">
            <tr>
                <th>Họ</th>
                <th>Tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/datatable/user.js"></script>
    <script src="~/js/datatable/confirm-delete.js"></script>
}