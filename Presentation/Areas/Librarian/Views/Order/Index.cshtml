@{
    ViewData["Title"] = "Quản lý đơn hàng";
    var status = Context.Request.Query["status"];
    var selected = "active text-white bg-dark";
    var unselected = "text-dark";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Quản lý đơn hàng</h2>
    </div>
</div>
<div class ="p-2 border-top border-bottom">
        <div class="d-flex justify-content-between pb-2 pt-2">
            <span></span>
            <ul class="list-group list-group-horizontal">
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="All">
                <li class="list-group-item @(status == "All"? selected : unselected)">
                    Tất cả
                </li>
                </a>
                @foreach (var orderStatus in OrderStatus.Collection)
                {
                    <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="@orderStatus">
                    <li class="list-group-item @(status == orderStatus? selected : unselected)">
                            @orderStatus
                    </li>
                    </a>
                }
            </ul>
        </div>
    <div>
        <table id="OrderData" class="table table-striped table-bordered" style="width:100%">
        <thead class="table-info">
                <tr>
                    <th>Tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{
    <script src="~/js/datatable/orderIndex.js"></script>
}

