@model Pager
@{
}
<div class="container mt-4">
    <ul class="pagination justify-content-end">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item ">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="1">Đầu</a>
            </li>
            <li class="page-item ">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Trước</a>
            </li>

        }
        @if (Model.TotalPage > 0)
        {

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage?"active":"") ">
                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@pge">@pge</a>
                </li>
            }

        }
        @if (Model.CurrentPage < Model.TotalPage)
        {
            <li class="page-item ">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">Sau</a>
            </li>
            <li class="page-item ">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@(Model.TotalPage)">Cuối</a>
            </li>
        }
    </ul>
</div>